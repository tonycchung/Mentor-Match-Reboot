.new
  %header
    %h1 Create Account
  =form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    =devise_error_messages!
    = render 'phrases'
    %article.inputs
      %section.userEmail
        = f.label :email
        = f.email_field :email, autofocus: true, placeholder: "jonsnow@castl.blk"
        .break
      %section.userFirstname
        = f.label :first_name
        = f.text_field :first_name, autofocus: true, placeholder: "First Name"
        .break
      %section.userLastname
        = f.label :last_name
        = f.text_field :last_name, autofocus: true, placeholder: "Last Name"
        .break
      %section.userPassword
        = f.label :password
        = f.password_field :password, autocomplete: "off", placeholder: "xxxxxxxx"
        .break
      %section.userConfirm
        = f.label :confirm_password
        = f.password_field :password_confirmation, autocomplete: "off", placeholder: "xxxxxxxx"
        .break

      = render('mentee_stack', f: f) if session[:role] == 'mentee'

      %section.submitBtn
        %button.trans_wht_btn
          = f.submit "Submit", {class: "btn_txt"}
    = f.hidden_field :role, value: session[:role]
    / %section.submitOptions
    /   %p or sign up with another account:
    /   %section.links-wrapper
    /     =link_to "", user_omniauth_authorize_path(:linkedin), class: "linkedin"
    /     =link_to "", user_omniauth_authorize_path(:github), class: "github"
