  <h1>Listing <%= "#{current_user.role == "mentee" ? "Mentors" : "Mentees"}" %></h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div><%= current_user.mentor? ? "Browse Mentees" : "Browse Mentors" %></div>
    <% @users.each do |user| %>
      <% if user.available? %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><%= link_to 'View User', user %></td>
          <% if current_user.mentee? %>
          <td><%= link_to 'Request Mentor', friendships_path(:friend_id => user.id), method: :post %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

