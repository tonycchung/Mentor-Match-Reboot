%hi
  Listing
  = "#{current_user.role == "mentee" ? "Mentors" : "Mentees"}"

%table
  %thead
    %tr
      %th First name
      %th Role
      %th colspan="3"
    </tr>
  </thead>

  <tbody>
    <div><%= current_user.mentor? ? "Browse Mentees" : "Browse Mentors" %></div>
    <% @users.each do |user| %>
      <% if user.available? %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><%= link_to 'View Profile', user %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
